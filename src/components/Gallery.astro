<section id="gallery">
  <div class="container">
    <div class="gallery-header">
      <div>
        <p class="section-label" style="color: var(--gold);">The work</p>
        <h2 class="section-title">A glimpse of the <em>studio</em></h2>
      </div>
      <p class="gallery-subtitle">
        A curated selection of garments made from secondhand textiles.
        Each piece has its own story.
      </p>
    </div>

    <!--
      GALLERY IMAGES
      Replace src values with your actual work photos.
      Recommended: 7 photos of finished garments, detail shots, etc.

      Example:
        src="/images/work-1.jpg"
        src="/images/work-2.jpg"
        ...etc
    -->
    <div class="gallery-grid">
      <div class="gallery-item">
        <img src="/images/work-1.jpg" alt="Garment 1"
          onerror="this.outerHTML='<div class=\'gallery-placeholder\'>garment no. 01</div>'" />
      </div>
      <div class="gallery-item">
        <img src="/images/work-2.jpg" alt="Garment 2"
          onerror="this.outerHTML='<div class=\'gallery-placeholder\'>garment no. 02</div>'" />
      </div>
      <div class="gallery-item">
        <img src="/images/work-3.jpg" alt="Garment 3"
          onerror="this.outerHTML='<div class=\'gallery-placeholder\'>garment no. 03</div>'" />
      </div>
      <div class="gallery-item">
        <img src="/images/work-4.jpg" alt="Garment 4"
          onerror="this.outerHTML='<div class=\'gallery-placeholder\'>garment no. 04</div>'" />
      </div>
      <div class="gallery-item">
        <img src="/images/work-5.jpg" alt="Garment 5"
          onerror="this.outerHTML='<div class=\'gallery-placeholder\'>garment no. 05</div>'" />
      </div>
      <div class="gallery-item">
        <img src="/images/work-6.jpg" alt="Garment 6"
          onerror="this.outerHTML='<div class=\'gallery-placeholder\'>garment no. 06</div>'" />
      </div>
